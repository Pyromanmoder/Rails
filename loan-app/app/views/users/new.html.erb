<% if @user.errors.any? %>
	<div class="alert alert-warning alert-dismissable">
		<a class="close" href="#" data-dismiss="alert">&times</a>
		<ul>
			<% @user.errors.full_messages.each do |m| %>
			<li><%= m %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= form_for @user do |f| %>
	<%= f.text_field :name %>
	<%= f.text_field :lastname %>
	<%= f.submit %>

<% end %>